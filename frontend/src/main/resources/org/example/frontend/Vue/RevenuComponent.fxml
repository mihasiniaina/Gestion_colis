<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="org.example.frontend.controllers.Revenu.RevenuComponentController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="20.0"
      style="-fx-background-color: #f4f6f9;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Cartes -->
    <HBox spacing="20.0">
        <VBox fx:id="cardMensuel"
              spacing="10.0"
              prefWidth="200.0"
              style="-fx-background-color: white; -fx-background-radius: 12;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Revenu Mensuel" style="-fx-text-fill: #4caf50; -fx-font-size: 14px;"/>
            <Label fx:id="labelMensuel" text="Ar 0" style="-fx-font-size: 20px; -fx-text-fill: #333;"/>
        </VBox>

        <VBox fx:id="cardAnnuel"
              spacing="10.0"
              prefWidth="200.0"
              style="-fx-background-color: white; -fx-background-radius: 12;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Revenu Annuel" style="-fx-text-fill: #2196f3; -fx-font-size: 14px;"/>
            <Label fx:id="labelAnnuel" text="Ar 0" style="-fx-font-size: 20px; -fx-text-fill: #333;"/>
        </VBox>

        <VBox fx:id="cardTotal"
              spacing="10.0"
              prefWidth="200.0"
              style="-fx-background-color: white; -fx-background-radius: 12;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Revenu Total" style="-fx-text-fill: #ff9800; -fx-font-size: 14px;"/>
            <Label fx:id="labelTotal" text="Ar 0" style="-fx-font-size: 20px; -fx-text-fill: #333;"/>
        </VBox>
    </HBox>

    <!-- Graphique -->
    <VBox spacing="10.0">
        <Label text="Revenus des 6 derniers mois"
               style="-fx-font-size: 16px; -fx-text-fill: #333;"/>
        <BarChart fx:id="barChart" prefHeight="300.0">
            <xAxis>
                <CategoryAxis fx:id="xAxis" label="Mois"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" label="Revenu"/>
            </yAxis>
        </BarChart>
    </VBox>
</VBox>
